@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewBag.SiteDescription">
    <meta property="og:url" content="@Url.Action(ViewContext.RouteData.GetRequiredString("action"), ViewContext.RouteData.GetRequiredString("Controller"), null, Request.Url.Scheme)" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewBag.Title" />
    <meta property="og:description" content="@ViewBag.SiteDescription" />
    <meta property="og:image" content="" />
    <meta property="og:site_name" content="@ViewBag.AppName" />
    <title>@(ViewBag.Title)(@ViewBag.SiteDescription)</title>
    @*<link rel="stylesheet" href="https://unpkg.com/purecss@0.6.2/build/pure-min.css" integrity="sha384-UQiGfs9ICog+LwheBSRCt1o5cbyKIHbwjWscjemyBMT9YCUMZffs6UqUTd0hObXD" crossorigin="anonymous">*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/pure/0.6.2/pure-min.css" integrity="sha256-l8LBIT/hSUv+lPB5sCHme+XoztA5gysT4rV/kDYas/c=" crossorigin="anonymous" />
    <!--[if lte IE 8]>
        <link rel="stylesheet" href="~/css/layouts/side-menu-old-ie.css">
    <![endif]-->
    <!--[if gt IE 8]><!-->
    <link rel="stylesheet" href="~/css/layouts/side-menu.css">
    <!--<![endif]-->
    <style>
        .footer{
            display:block;
            background: #363636;
            color: #a6a6a6;
            text-align: center;
            padding: 0.5em 2em;
            line-height: 1.6em;
            bottom: 0;
        }
    </style>
    @RenderSection("style", required: false)
</head>
<body>
    <div id="layout">
        <a href="#menu" id="menuLink" class="menu-link">
            <span></span>
        </a>
        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="#">Slots</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item @(ViewContext.RouteData.GetRequiredString("action")== "Index" ? "pure-menu-selected" : "")"><a href="@(Url.Action("Index", "Chess", new { Language = ViewBag.Language}))" class="pure-menu-link">@ViewBag.History</a></li>
                    <li class="pure-menu-item @(ViewContext.RouteData.GetRequiredString("action")== "Fortune" ? "pure-menu-selected" : "")"><a href="@(Url.Action("Fortune", "Chess", new { Language = ViewBag.Language}))" class="pure-menu-link">@ViewBag.Fortune</a></li>
                    <li class="pure-menu-item @(ViewContext.RouteData.GetRequiredString("action")== "Contact" ? "pure-menu-selected" : "")"><a href="@(Url.Action("Contact", "Chess", new { Language = ViewBag.Language}))" class="pure-menu-link">@ViewBag.Contact</a></li>
                </ul>
            </div>
        </div>
        <div id="main" style="background-image:url('@Url.Content("~/images/a01_8.gif")');">
            <div class="header">
                <h2>@ViewBag.Title</h2>
            </div>
            @RenderBody()
            <div class="footer">
                    Copyright &copy; @DateTime.Now.Year Scott. All rights reserved.
            </div>
        </div>
    </div>
    <script src="~/js/ui.min.js" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
