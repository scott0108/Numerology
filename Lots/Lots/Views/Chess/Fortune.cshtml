    <!--[if lt IE 9]>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.js"></script>
    <![endif]-->
    <style>
        dl {
            border: 1px solid #FF9900;
            padding: 0.5em;
            display: table;
            border-radius: 5px;
            width: 50px;
            text-align: center;
            background-color: #FFFFCC;
        }

        dt {
            display: table-row;
            text-align: center;
            font-weight: bold;
            padding: 0.5em;
            color: #FF9900;
        }

        dd {
            display: table-row;
            padding: 0.5em;
            text-align: center;
        }

        .chessLot {
            margin: 2px auto;
            width: 40px;
            height: 40px;
            background-color: #006500;
            border-radius: 100%;
            border: 2px solid black;
        }

            .chessLot:hover {
                border: 2px solid red;
                background-color: #fff;
            }

        .chessSel {
            margin: 2px auto;
            width: 40px;
            height: 40px;
            background-color: #fff;
            border-radius: 100%;
            border: 2px solid black;
        }

        .ccle {
            margin: 0px auto;
            text-align: center;
        }

            .ccle div {
                display: inline-block;
                vertical-align: top;
                border: 1px solid black;
                margin: 2px;
                width: 40px;
                height: 40px;
                border-radius: 50%;
            }

        .chessPieces {
            width: 100px;
            height: 100px;
            background-color: #c8c8c8;
            border-radius: 100%;
        }

            .chessPieces > div {
                font-family: 標楷體;
                width: 80%;
                height: 80%;
                background-color: #8c8c8c;
                border-radius: 50%;
                margin: auto auto;
                position: relative;
                border: 1px solid #222;
                top: 3px;
                text-align: center;
            }

                .chessPieces > div span {
                    font-weight: 900;
                    font-size: 20px;
                    padding: 2px;
                    position: relative;
                    border-radius: 50%;
                    background-color: #999;
                    top: 4px;
                }

        .black > div {
            color: black;
            border-color: #222;
        }

        .red > div {
            color: #a00;
            border-color: #a00;
        }
    </style>
}
